(include_subdirs unqualified)

(library
 (name Grain_tests)
 (public_name grain-tests.test)
 (flags
  (:standard -linkall -g -w -40))
 (libraries grain rely.lib)
 (modules
  (:standard \ test)))

(test
 (name test)
 (libraries grain-tests.test)
 (modules test)
 (flags
  (:standard -w -40))
 (action
  (setenv
   GRAIN_TEST_FILTER
   %{profile}
   (run %{test}))))
