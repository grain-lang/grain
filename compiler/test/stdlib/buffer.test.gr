// addChar
let char = 'a' // 1 byte
let buf = Buffer.make(0)
Buffer.addChar(char, buf)
assert Buffer.toString(buf) == "a"
let char = '¬©' // 2 bytes
let buf = Buffer.make(0)
Buffer.addChar(char, buf)
assert Buffer.toString(buf) == "¬©"
let char = String.charAt(0, "‚ú®") // 3 bytes
let buf = Buffer.make(0)
Buffer.addChar(char, buf)
assert Buffer.toString(buf) == "‚ú®"
let char = 'üçû' // 4 bytes
let buf = Buffer.make(0)
Buffer.addChar(char, buf)
assert Buffer.toString(buf) == "üçû"

// addCharFromCodePoint
let char = Char.code('a') // 1 byte
let buf = Buffer.make(0)
Buffer.addCharFromCodePoint(char, buf)
assert Buffer.toString(buf) == "a"
let char = Char.code('¬©') // 2 bytes
let buf = Buffer.make(0)
Buffer.addCharFromCodePoint(char, buf)
assert Buffer.toString(buf) == "¬©"
let char = Char.code('‚ú®') // 3 bytes
let buf = Buffer.make(0)
Buffer.addCharFromCodePoint(char, buf)
assert Buffer.toString(buf) == "‚ú®"
let char = Char.code('üçû') // 4 bytes
let buf = Buffer.make(0)
Buffer.addCharFromCodePoint(char, buf)
assert Buffer.toString(buf) == "üçû"

