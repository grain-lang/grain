module LongLists

from "list" include List
use List.*

let rec make_list = (x, n) => {
  let rec helper = (a, b, acc) => {
    if (a == 0) {
      acc
    } else {
      helper(a - 1, b, [b, ...acc])
    }
  }
  helper(n, x, [])
}
and loop = n => {
  if (n == 0) {
    true
  } else {
    let lst = make_list(n, n)
    loop(n - 1)
  }
}

print(loop(25)) // <- eats up a lot of heap
