// For format details, see https://aka.ms/vscode-remote/devcontainer.json or this file's README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.134.0/containers/javascript-node
{
  "name": "Grain",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  // Set *default* container specific settings.json values on container create.
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  // Add the IDs of extensions you want installed when the container is created.
  "extensions": [
    "ocamllabs.ocaml-platform",
    "grain-lang.vscode-grain",
    "ms-azuretools.vscode-docker",
  ],
  // Specifies a command that should be run after the container has been created.
  "postCreateCommand": "yarn; yarn setup; yarn compiler import-from /prebuild/_exports; yarn compiler build;"
}
