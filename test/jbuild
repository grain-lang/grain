(jbuild_version 1)

(executable
 ((name test)
  (libraries (grain oUnit extlib))))

(rule
  ((targets (grain-root.txt))
   (action  (write-file ${@} ${ROOT}/../install/default))))

(alias
 ((name   runtest)
  (deps   (test.exe
           grain-root.txt
           (files_recursively_in input)
           (files_recursively_in test-libs)
           (files_recursively_in test-data)))
  (action (run ${<}))))
