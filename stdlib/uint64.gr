provide let popcnt = (value: Uint64) => {
  let nv = WasmI64.load(WasmI32.fromGrain(value), _VALUE_OFFSET)
  let ptr = newUint64(WasmI64.popcnt(nv))
  WasmI32.toGrain(ptr): Uint64
}
