@unsafe
provide let (-) = (x: Uint64, y: Uint64) => {
  let xv = WasmI64.load(WasmI32.fromGrain(x), _VALUE_OFFSET)
  let yv = WasmI64.load(WasmI32.fromGrain(y), _VALUE_OFFSET)
  let ptr = newUint64(xv - yv)
  WasmI32.toGrain(ptr): Uint64
}

